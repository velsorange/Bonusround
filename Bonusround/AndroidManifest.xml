<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.velsorange.bonusround"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:textColor="@android:color/holo_blue_light"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.velsorange.bonusround.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.velsorange.bonusround.LoginActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.velsorange.bonusround.UjFelhasznalo"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_uj_felhasznalo" >
        </activity>
        <activity
            android:name="com.velsorange.bonusround.ItemListActivity"
            android:label="@string/title_item_list"
            android:parentActivityName="com.velsorange.bonusround.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.velsorange.bonusround.MainActivity" />
        </activity>
        <activity
            android:name="com.velsorange.bonusround.KarbActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_karb"
            android:parentActivityName="com.velsorange.bonusround.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.velsorange.bonusround.MainActivity" />
        </activity>
        <activity
            android:name="com.velsorange.bonusround.Karbantartas"
            android:label="@string/title_activity_karbartartas" >
        </activity>
    </application>

</manifest>