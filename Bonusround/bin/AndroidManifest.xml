<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.velsorange.bonusround"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:textColor="@android:color/holo_blue_light"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.velsorange.bonusround.MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.velsorange.bonusround.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name="com.velsorange.bonusround.UjFelhasznalo"
            android:label="@string/title_activity_uj_felhasznalo"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
    </application>

</manifest>